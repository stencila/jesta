{
  "name": "@stencila/jesta",
  "version": "0.1.0",
  "description": "Stencila plugin for Node.js",
  "main": "dist/index.js",
  "scripts": {
    "format": "npx prettier --write './**/*.{js,md,ts}'",
    "lint": "eslint --fix './**/*.{js,ts}'",
    "test": "jest",
    "test:cover": "npm run test -- --collectCoverage",
    "start": "npx ts-node src",
    "build": "tsc -p tsconfig.json",
    "postbuild": "node dist/index.js register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/stencila/jesta"
  },
  "homepage": "https://github.com/stencila/stencila/jesta#readme",
  "keywords": [
    "Stencila",
    "plugin"
  ],
  "author": "Stencila <hello@stenci.la>",
  "license": "Apache-2.0",
  "dependencies": {
    "@stencila/schema": "^0.47.2",
    "acorn": "^8.0.4",
    "acorn-walk": "^8.0.1",
    "json-schema": "^0.3.0"
  },
  "devDependencies": {
    "@stencila/dev-config": "1.4.131",
    "@types/estree": "0.0.46",
    "@types/jest": "26.0.20",
    "jest": "26.6.3",
    "ts-jest": "26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/index.test.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "renovate": {
    "extends": [
      "@stencila"
    ]
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  }
}
