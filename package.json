{
  "name": "@stencila/jesta",
  "version": "1.9.1",
  "description": "Stencila plugin for executable documents using JavaScript",
  "bin": "dist/src/index.js",
  "main": "dist/src/index.js",
  "scripts": {
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "test:cover": "npm run test -- --collectCoverage",
    "start": "ts-node src",
    "build": "npm run build:codemeta && npm run build:dist && npm run build:bin",
    "build:codemeta": "ts-node src/index.ts manifest --update",
    "build:dist": "tsc -p tsconfig.json && cp codemeta.json dist/",
    "build:bin": "bash build.sh",
    "postbuild": "node dist/src/index.js register",
    "docs": "typedoc src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stencila/jesta"
  },
  "homepage": "https://github.com/stencila/jesta#readme",
  "keywords": [
    "Stencila",
    "plugin",
    "executable",
    "documents",
    "stencils"
  ],
  "author": "Stencila <hello@stenci.la>",
  "license": "Apache-2.0",
  "dependencies": {
    "@stencila/schema": "^1.2.1",
    "acorn": "^8.1.0",
    "acorn-walk": "^8.0.2",
    "ajv": "^8.1.0",
    "ajv-formats": "^2.0.2",
    "content-type": "^1.0.4",
    "got": "^11.8.2",
    "keyv": "^4.0.3",
    "mime": "^2.5.0",
    "minimist": "^1.2.5",
    "parse-author": "^2.0.0",
    "parse-full-name": "^1.2.5"
  },
  "devDependencies": {
    "@semantic-release/exec": "5.0.0",
    "@stencila/dev-config": "2.0.7",
    "@types/content-type": "1.1.3",
    "@types/estree": "0.0.47",
    "@types/jest": "26.0.22",
    "@types/mime": "2.0.3",
    "@types/parse-author": "2.0.0",
    "@types/parse-full-name": "1.2.0",
    "jest": "26.6.3",
    "json-schema": "0.3.0",
    "mock-stdin": "1.0.0",
    "nock": "13.0.11",
    "pkg": "4.5.1",
    "tempy": "1.0.1",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "typedoc": "0.20.35",
    "typescript": "4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "tests/helpers.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "renovate": {
    "extends": [
      "@stencila"
    ]
  },
  "pkg": {
    "assets": [
      "dist/codemeta.json"
    ],
    "targets": [
      "node14-linux-x64",
      "node14-macos-x64",
      "node14-win-x64"
    ]
  },
  "release": {
    "extends": "@stencila/semantic-release-config",
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i -e 's!\"softwareVersion\": .*!\"softwareVersion\": \"${nextRelease.version}\",!' codemeta.json && make build docs"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "codemeta.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "bin/x86_64-unknown-linux-gnu.tar.gz",
              "name": "jesta-v${nextRelease.version}-x86_64-unknown-linux-gnu.tar.gz"
            },
            {
              "path": "bin/x86_64-apple-darwin.tar.gz",
              "name": "jesta-v${nextRelease.version}-x86_64-apple-darwin.tar.gz"
            },
            {
              "path": "bin/x86_64-pc-windows-msvc.zip",
              "name": "jesta-v${nextRelease.version}-x86_64-pc-windows-msvc.zip"
            }
          ]
        }
      ],
      "@qiwi/semantic-release-gh-pages-plugin"
    ]
  }
}
